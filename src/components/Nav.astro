---
import {Icon} from 'astro-icon'
import navData from '../data/navData';
import Link from './Link.astro';

---
<nav aria-label="Primary">
<div class="navbar">
    <a href="/" class="logomark" aria-label="Go Home">
    <Icon  name="mdi:home" width="60"/>
    </a>
    <ul>
{
    navData.map((item)=> <Link
     href={item.path}
     text={item.name}
     style='secondary'
     isFilled={false}
     data-navLink
     
     icon={{
        name: 'mdi:person',
        side: 'left'
     }}
     />)
}
    </ul>
</div>
</nav>

<script>
    import '../js/nav.js'
</script>