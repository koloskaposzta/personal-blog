---
import { Icon } from 'astro-icon';
// import navData from '../data/navData';
import Link from './Link.astro';
---

<nav aria-label='Primary'>
  <div class='navbar'>
    <a href='/' class='logomark' aria-label='Go Home'>
      <Icon name='twemoji:house-with-garden' width='60' />
    </a>

    <ul>
      <Link
        href='/blog/'
        text='Blog posts'
        style='secondary'
        isFilled={false}
        data-navLink
        icon={{
          name: 'twemoji:closed-mailbox-with-raised-flag',
          side: 'right',
        }}
      />

      <Link
        href='/about/'
        text='About me'
        style='secondary'
        isFilled={false}
        data-navLink
        icon={{
          name: 'twemoji:waving-hand-medium-light-skin-tone',
          side: 'right',
        }}
      />
    </ul>
  </div>
</nav>

<script>
  import '../js/nav.js';
</script>
