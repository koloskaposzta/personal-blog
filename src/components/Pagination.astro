---
import Link from "./Link.astro";

const {prevUrl, nextUrl} = Astro.props

---

<nav
aria-label="Blog pages"
>
    {
        !!prevUrl &&(
            <Link text="Prevoius"
            href={prevUrl}
            style="primary"
            borderdVisible={true}
            isFilled={false}
            icon={{
                name: "tabler:arrow-big-left-line",
                side: "left"
            }}
            />
        )
    }
        {
        !!nextUrl &&(
                <Link text="Next"
                href={nextUrl}
                style="primary"
                borderdVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-right-line",
                    side: "right"
                }}
                />
            )
        }
</nav>