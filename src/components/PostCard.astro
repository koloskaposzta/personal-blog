---
import { Image } from '@astrojs/image/components';

import { formatDate, slugify } from '../js/util';
import Link from './Link.astro';

const { data, url, tagType } = Astro.props;
const Tag = tagType;
const { category, image, title, author, date, description } = data;
---

<article class='card'>
  <small
    ><a href={`/category/${slugify(category)}/`} class='badge'>
      {category}
    </a>
  </small>
  <a href={`/blog/${url}`} tabindex='-1' aria-hidden='true'>
    <Image
      src={image.src}
      alt={image.alt}
      width='400'
      height='250'
      format='webp'
      fit='cover'
      quality={80}
      aspectRatio='4:1'
      class='hero-image'
    />
  </a>
  <div class='content'>
    <div>
      <Tag class='h3'>{title}</Tag>
      <p>
        by <a href={`/about/`}>{author}</a> - {formatDate(date)}
      </p>
    </div>
    <p>{description}</p>
    <Link href={`/blog/${url}`} text='Read Post' style='secondary' />
  </div>
</article>
